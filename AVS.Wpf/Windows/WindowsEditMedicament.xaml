<Window x:Class="AVS.Wpf.Windows.WindowsEditMedicament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVS.Wpf.Windows"
        mc:Ignorable="d"
        Title="Modification de Médicament" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Espaceur -->
            <RowDefinition Height="Auto"/>
            <!-- Formulaire -->
            <RowDefinition Height="*"/>
            <!-- Espace flexible -->
            <RowDefinition Height="Auto"/>
            <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Grid.Row="0" 
                   Text="Modification d'un Médicament"
                   Style="{StaticResource TitleStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Espaceur -->
        <Rectangle Grid.Row="1" Height="10"/>

        <!-- Formulaire principal -->
        <StackPanel Grid.Row="2">

            <!-- Champ Nom -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Nom du Médicament :"
                          Style="{StaticResource SubtitleStyle}"
                          FontSize="14"
                          Margin="0,0,0,15"/>
                <TextBox x:Name="TextBoxName"
                        Style="{StaticResource ModernTextBoxStyle}"
                        Text="{Binding SelectedMedicament.Nom}"
                        TabIndex="1"
                        Margin="200,0,200,15"/>
            </StackPanel>

            <!-- Champ Durée -->
            <StackPanel>
                <TextBlock Text="Durée de péremption (jours) :"
                          Style="{StaticResource SubtitleStyle}"
                          FontSize="14"
                          Margin="0,0,0,15"/>
                <TextBox x:Name="TextBoxPeremption"
                        Style="{StaticResource ModernTextBoxStyle}"
                        Text="{Binding SelectedMedicament.Peremption}"
                        PreviewTextInput="NumericTextBox"
                        TabIndex="2"
                        Margin="200,0,200,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Zone des boutons -->
        <StackPanel Grid.Row="4" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0">

            <Button x:Name="annuler" 
                   Content="Annuler"
                   Style="{StaticResource CompactCancelButtonStyle}"
                   Click="Annuler_Edit_Click"
                   Width="100"
                   TabIndex="4"
                   Margin="0,0,15,0"/>

            <Button x:Name="Modifier" 
                   Content="Modifier"
                   Style="{StaticResource CompactCreateButtonStyle}"
                   Click="Edit_Medicament_Click"
                   Width="100"
                   TabIndex="3"
                   IsDefault="True"/>

        </StackPanel>

    </Grid>
</Window>