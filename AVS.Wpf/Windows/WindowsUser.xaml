<UserControl x:Class="AVS.Wpf.Windows.WindowsUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVS.Wpf.Windows"
        xmlns:views="clr-namespace:AVS.Wpf.Windows"
        xmlns:converters="clr-namespace:AVS.Wpf.Converters"
         mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/> 

    </UserControl.Resources>
    <Grid>
        <Grid ShowGridLines="false">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="125"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonEdit" Style="{StaticResource StyleEdit}" Content="Modifier" Click="Edit_User_Click" Grid.Row="1" Grid.Column="1" FontSize="14"
                   Visibility="{Binding SelectedUser, Converter={StaticResource ObjectToVisibilityConverter}}"></Button>
            <Button x:Name="ButtonDelete" Style="{StaticResource StyleDelete}" Content="Supprimer" Click="Delete_User_Click" Grid.Row="1" Grid.Column="3" FontSize="14"
                   Visibility="{Binding SelectedUser, Converter={StaticResource ObjectToVisibilityConverter}}"></Button>
        </Grid>
        <Grid ShowGridLines="false">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Utilisateurs :" Grid.Column="1" Grid.Row="1" FontSize="24" HorizontalAlignment="Left"></Label>
            <DataGrid
                                    x:Name="user"
                                    Grid.Column="1"
                                    Grid.Row="2" 
                                    ItemsSource="{Binding Users}"
					                        DisplayMemberPath="Libelle"
					                        SelectedItem="{Binding SelectedUser}"
                                            AutoGenerateColumns="False"
                                            IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom user" Binding="{Binding Nom}"/>
                    <DataGridTextColumn Header="Prenom user" Binding="{Binding Prenom}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Date Naissance" Binding="{Binding Naissance}"/>
                    <DataGridTextColumn Header="Genre" Binding="{Binding Genre}"/>
                    <DataGridTextColumn Header="Création du compte" Binding="{Binding CreatedAt}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>

