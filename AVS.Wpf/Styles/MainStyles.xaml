<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Import de tous les dictionnaires de styles -->
    <ResourceDictionary.MergedDictionaries>
        <!-- Couleurs et ressources de base -->
        <ResourceDictionary Source="ColorStyles.xaml"/>

        <!-- Styles des contrôles de base -->
        <ResourceDictionary Source="TextBoxStyles.xaml"/>
        <ResourceDictionary Source="ButtonStyles.xaml"/>
        <ResourceDictionary Source="WindowStyles.xaml"/>

        <!-- Styles spécifiques aux pages -->
        <ResourceDictionary Source="LoginStyles.xaml"/>
        <ResourceDictionary Source="MainWindowStyles.xaml"/>
        <ResourceDictionary Source="FormStyles.xaml"/>

        <!-- Animations -->
        <ResourceDictionary Source="AnimationStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>