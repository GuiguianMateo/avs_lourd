<Window x:Class="AVS.Wpf.Windows.WindowsEditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVS.Wpf.Windows"
        mc:Ignorable="d"
        Title="Modification de l'Utilisateur" 
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Espaceur -->
            <RowDefinition Height="Auto"/>
            <!-- Formulaire -->
            <RowDefinition Height="*"/>
            <!-- Espace flexible -->
            <RowDefinition Height="Auto"/>
            <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Grid.Row="0" 
                   Text="Modification d'un Utilisateur"
                   Style="{StaticResource TitleStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Espaceur -->
        <Rectangle Grid.Row="1" Height="10"/>

        <!-- Formulaire principal -->
        <StackPanel Grid.Row="2">

            <!-- Champs Nom et Prénom sur la même ligne -->
            <StackPanel Margin="0,0,0,20">
                <Grid Margin="50,0,50,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Labels -->
                    <TextBlock Grid.Column="0" Grid.Row="0"
                              Text="Nom :"
                              Style="{StaticResource SubtitleStyle}"
                              FontSize="14"/>
                    <TextBlock Grid.Column="2" Grid.Row="0"
                              Text="Prénom :"
                              Style="{StaticResource SubtitleStyle}"
                              FontSize="14"/>

                    <!-- TextBoxes -->
                    <TextBox x:Name="TextBoxFirstName"
                            Grid.Column="0" Grid.Row="2"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Text="{Binding SelectedUser.Nom}"
                            TabIndex="1"/>
                    <TextBox x:Name="TextBoxLastName"
                            Grid.Column="2" Grid.Row="2"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Text="{Binding SelectedUser.Prenom}"
                            TabIndex="2"/>
                </Grid>
            </StackPanel>

            <!-- Champs Genre et Date de naissance sur la même ligne -->
            <StackPanel Margin="0,0,0,20">
                <Grid Margin="50,0,50,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Labels -->
                    <TextBlock Grid.Column="0" Grid.Row="0"
                              Text="Genre :"
                              Style="{StaticResource SubtitleStyle}"
                              FontSize="14"/>
                    <TextBlock Grid.Column="2" Grid.Row="0"
                              Text="Date de naissance :"
                              Style="{StaticResource SubtitleStyle}"
                              FontSize="14"/>

                    <!-- Contrôles -->
                    <StackPanel Grid.Column="0" Grid.Row="2" 
                               Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <RadioButton x:Name="RadioMasculin" 
                                   Content="Masculin" 
                                   GroupName="Genre" 
                                   Checked="Genre_Changed" 
                                   Tag="Masculin"
                                   TabIndex="3"
                                   Margin="0,0,15,0"/>
                        <RadioButton x:Name="RadioFeminin" 
                                   Content="Féminin" 
                                   GroupName="Genre" 
                                   Checked="Genre_Changed" 
                                   Tag="Feminin"
                                   TabIndex="4"
                                   Margin="0,0,15,0"/>
                        <RadioButton x:Name="RadioAutre" 
                                   Content="Autre" 
                                   GroupName="Genre" 
                                   Checked="Genre_Changed" 
                                   Tag="Autre"
                                   TabIndex="5"/>
                    </StackPanel>

                    <DatePicker x:Name="DatePickerBirthday"
                               Grid.Column="2" Grid.Row="2"
                               SelectedDate="{Binding SelectedUser.Naissance}"
                               TabIndex="6"
                               HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>

            <!-- Champ Email -->
            <StackPanel>
                <TextBlock Text="Email :"
                          Style="{StaticResource SubtitleStyle}"
                          FontSize="14"
                          Margin="0,0,0,15"/>
                <TextBox x:Name="TextBoxEmail"
                        Style="{StaticResource ModernTextBoxStyle}"
                        Text="{Binding SelectedUser.Email}"
                        TabIndex="7"
                        Margin="200,0,200,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Zone des boutons -->
        <StackPanel Grid.Row="4" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0">

            <Button x:Name="annuler" 
                   Content="Annuler"
                   Style="{StaticResource CompactCancelButtonStyle}"
                   Click="Annuler_Edit_Click"
                   Width="100"
                   TabIndex="9"
                   Margin="0,0,15,0"/>

            <Button x:Name="modifier" 
                   Content="Modifier"
                   Style="{StaticResource CompactCreateButtonStyle}"
                   Click="Edit_User_Click"
                   Width="100"
                   TabIndex="8"
                   IsDefault="True"/>

        </StackPanel>

    </Grid>
</Window>